<%= form_for @appearance do |f| %>
	<%= f.label :guest_id %>
	<%= f.collection_select :guest_id, @guest, :id, :name %><br/>

	<%= f.label :episode_id %>
	<%= f.collection_select :episode_id, @episode, :id, :number %><br/>

	<%= f.label :rating %>
	<%= f.number_field :rating %><br/>

	<%= f.submit %>
<% end %>
