<h1>Episode #<%=@episode.number %></h1>
<%=@episode.date %><br>
<%=@episode.rating %><br>
<% @guest.each do |guest| %>
<%=link_to guest.name, guestepisode %>
<% end %>

<%=form_for @episode.guests do |f| %>
<%=f.collection_select :guest_id, Guest.all, :id, :name %>
<%=f.hidden_field :guest_id, value: @episode.guest.id %>
<% end %>
